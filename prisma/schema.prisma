generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 스타일
model Style {
  id          String     @id @default(uuid())
  title       String
  description String?
  password    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  viewCount   Int        @default(0)
  tags        Tag[]
  images      Image[]
  items       Item[]
  curations   Curation[]

  @@index([title, description])
}

// 스타일 구성 아이템
model Item {
  id        String   @id @default(uuid())
  itemName  String
  brandName String
  price     Decimal  @default(0.0)
  category  Category
  style     Style    @relation(fields: [styleId], references: [id], onDelete: Cascade)
  styleId   String
}

// 스타일 구성 카테고리
enum Category {
  TOPS
  BOTTOMS
  OUTERWEAR
  DRESS
  SHOES
  BAGS
  ACCESSORIES
}

// 태그
model Tag {
  id            String   @id @default(uuid())
  tag           String   @unique
  lookbookCount Int      @default(0) // <-태그당 룩북수
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  styles        Style[]
}

// 이미지
model Image {
  id          String   @id @default(uuid())
  url         String // 이미지 파일 경로 또는 URL
  isThumbnail Boolean  @default(false) // 대표이미지 설정
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  style       Style    @relation(fields: [styleId], references: [id], onDelete: Cascade)
  styleId     String
}

// 큐레이팅
model Curation {
  id              String           @id @default(uuid())
  trendy          Int              @default(0)
  unique          Int              @default(0)
  practical       Int              @default(0)
  costEffective   Int              @default(0)
  average         Decimal          @default(0.0)
  content         String
  nickName        String
  password        String
  style           Style            @relation(fields: [styleId], references: [id], onDelete: Cascade)
  styleId         String
  curationComment CurationComment?
}

// 덧글
model CurationComment {
  id         String   @id @default(uuid())
  content    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  password   String
  curation   Curation @relation(fields: [curationId], references: [id], onDelete: Cascade)
  curationId String   @unique
}
